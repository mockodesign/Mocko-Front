# =================================
# MOCKO DESIGNS - FRONTEND
# Environment Configuration
# =================================

# Next.js Configuration
NODE_ENV=production
NEXT_PUBLIC_APP_ENV=production

# NextAuth Configuration
NEXTAUTH_SECRET=your-nextauth-secret-key-here
NEXTAUTH_URL=https://your-app.vercel.app

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# API Configuration - UPDATE THESE AFTER BACK4APP DEPLOYMENT
NEXT_PUBLIC_API_URL=https://your-backend.back4app.io
NEXT_PUBLIC_API_BASE_URL=https://your-backend.back4app.io/api/v1

# Feature Flags
NEXT_PUBLIC_ENABLE_PREMIUM_FEATURES=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG=true

# Analytics Configuration (Optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=your-ga-measurement-id
NEXT_PUBLIC_HOTJAR_ID=your-hotjar-id

# Social Media Integration (Optional)
NEXT_PUBLIC_FACEBOOK_APP_ID=your-facebook-app-id
NEXT_PUBLIC_TWITTER_API_KEY=your-twitter-api-key

# Error Tracking (Optional)
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# CDN Configuration (Optional)
NEXT_PUBLIC_CDN_URL=https://your-cdn-url.com

# Application Settings
NEXT_PUBLIC_APP_NAME=Mocko Designs
NEXT_PUBLIC_APP_VERSION=2.0.0
NEXT_PUBLIC_APP_DESCRIPTION=Professional Design Tool

# Performance Settings
NEXT_PUBLIC_ENABLE_COMPRESSION=true
NEXT_PUBLIC_ENABLE_CACHING=true

# Development Settings
NEXT_PUBLIC_SHOW_PERFORMANCE_METRICS=false
NEXT_PUBLIC_ENABLE_MOCK_DATA=false

# Subscription Settings
NEXT_PUBLIC_SUBSCRIPTION_MONTHLY_PRICE=60
NEXT_PUBLIC_SUBSCRIPTION_YEARLY_PRICE=600
NEXT_PUBLIC_FREE_TIER_LIMIT=5

# File Upload Settings
NEXT_PUBLIC_MAX_FILE_SIZE=50
NEXT_PUBLIC_ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,svg,pdf

# Social Sharing
NEXT_PUBLIC_ENABLE_SOCIAL_SHARING=true
NEXT_PUBLIC_DEFAULT_SHARE_MESSAGE=Check out this design created with Mocko Designs!